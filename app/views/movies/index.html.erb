<h1>Listing movies</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Poster</th>
    <th>Summary</th>
    <th>Video file</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @movies.each do |movie| %>
  <tr>
    <td><%= movie.name %></td>
    <td><%= movie.poster %></td>
    <td><%= movie.summary %></td>
    <td><%= movie.video_file %></td>
    <td><%= link_to 'Show', movie %></td>
    <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
    <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

