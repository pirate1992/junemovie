<h1>Listing notices</h1>

<table class="table table-hover">
	<thead>
		<tr>
			<th>Headline</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @notices.each do |notice| %>
		<tr>
			<td><%= notice.headline %></td>
			<td>
				<%= link_to 'Show', admin_notice_path(notice) %>
				<%= link_to 'Edit', edit_admin_notice_path(notice) %>
				<%= link_to 'Destroy', admin_notice_path(notice), method: :delete, data: { confirm: 'Are you sure?' } %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>

<%= link_to 'New notice', new_admin_notice_path %>
