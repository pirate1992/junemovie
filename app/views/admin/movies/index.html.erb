<h1>Listing movies</h1>

<table>
	<tr>
		<th>Name</th>
		<th></th>
	</tr>

	<% @movies.each do |movie| %>
	<tr>
		<td><%= movie.name %></td>
		<td>
			<%= link_to 'Edit', edit_admin_movie_path(movie) %>
			<%= link_to 'Destroy', admin_movie_path(movie), method: :delete, data: { confirm: 'Are you sure?' } %>
		</td>
	</tr>
	<% end %>
</table>

<%= link_to "New Movie", new_admin_movie_path %>