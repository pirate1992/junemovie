<h1>Listing categories</h1>

<table class="table table-hover">
	<thead>
		<tr>
			<th>Name</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @categories.each do |category| %>
		
		
		<tr>
			<td><%= category.name %></td>
			<td>
				<%= link_to 'Show', admin_category_path(category) %>
				<%= link_to 'Edit', edit_admin_category_path(category) %>
				<%= link_to 'Destroy', admin_categories_path(category), method: :delete, data: { confirm: 'Are you sure?' } %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>

<%= link_to 'New Category', new_admin_category_path %>
