<!DOCTYPE html>
<html>
<head>
	<title>Junemovie后台</title>
	<%= stylesheet_link_tag    "admin", :media => "all" %>
	<%= javascript_include_tag "admin" %>
	<%= csrf_meta_tags %>
</head>

<body>

<div class="container">
	<div class="navbar">
		<div class="navbar-inner">
			<%= link_to "Junemovie后台", admin_root_path, class: "brand" %>
			<ul class="nav">
				<li><%= link_to "分类管理", admin_categories_path %></li>
				<li><%= link_to "影片管理", admin_movies_path %></li>
				<li><%= link_to "新闻", admin_notices_path %></li>
				<li><%= link_to "人物角色管理", admin_characters_path %></li>
			</ul>

			<% if current_user %>
			<ul class="nav nav-tabs pull-right">
				<li class="dropdown">
					<a class="dropdown-toggle" data-toggle="dropdown" href="#" >
						User
						<b class="caret"></b>
					</a>
					<ul class="dropdown-menu">
						<li><%= link_to('登出', destroy_user_session_path, :method => :delete) %></li>
						<li><%= link_to('修改密碼', edit_registration_path(:user)) %></li>
					</ul>
				</li>
			</ul>
			<% else %>
			<ul class="nav pull-right">
				<li class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown">
						User
						<b class="caret"></b>
					</a>
					<ul class="dropdown-menu">
						<li><%= link_to("登陆", new_session_path(:user)) %></li>
					</ul>
				</li>
			</ul>
			<% end %>
		</div>
	</div>


	<%= yield %>

</div>
</body>
</html>
